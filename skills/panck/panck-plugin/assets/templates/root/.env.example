# {{SERVICE_NAME}} Environment Configuration
# Copy this file to .env.local for local overrides (gitignored)

# =============================================================================
# Required
# =============================================================================

# Nacos (Service Discovery & Config)
NACOS_HOST=localhost
NACOS_PORT=30006

# =============================================================================
# Database
# =============================================================================

# MySQL
DB_HOST=localhost
DB_PORT=30001
DB_NAME={{SERVICE_PACKAGE}}
DB_USERNAME=root
DB_PASSWORD=root

# =============================================================================
# Redis
# =============================================================================

REDIS_HOST=localhost
REDIS_PORT=30002
REDIS_PASSWORD=

# =============================================================================
# Kafka
# =============================================================================

KAFKA_BOOTSTRAP_SERVERS=localhost:30009

# =============================================================================
# Observability
# =============================================================================

# OpenTelemetry
OTLP_ENDPOINT=http://localhost:30014/v1/traces

# =============================================================================
# Optional
# =============================================================================

# Spring Profile
SPRING_PROFILES_ACTIVE=dev

# Service Weight (for canary deployment)
SERVICE_WEIGHT=1

# JVM Options
JAVA_OPTS=-Xms256m -Xmx512m
